    <style name="campoTexto">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">?attr/colorTextoCampoTexto</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/fondo_campo_texto</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="nombreIcono">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorNombreIcono</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tituloMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">?attr/colorTituloMenu</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="subtituloFragment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:freezesText">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/colorSubtituloFragment</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="botonesFragment">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="tituloFragment">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:freezesText">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/colorTitulo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtituloRecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">?attr/colorSubtitulo</item>
    </style>

    <style name="subtituloRecyclerViewMarquee" parent="subtituloRecyclerView">
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:freezesText">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tituloActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">?attr/colorTituloActivity</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tituloAjustes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">?attr/colorTituloActivity</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ajuste">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">?attr/colorTitulo</item>
    </style>

    <style name="subtituloAjustes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textColor">?attr/colorSubtitulo</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="switchAjustes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="seekbarAjustes">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_ajustes</item>
        <item name="android:splitTrack">false</item>
    </style>

    <style name="seccionGrandeAjustes">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@drawable/fondo_seccion_ajustes</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="seccionPequenaAjustes" parent="seccionGrandeAjustes">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="botonNeutro">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:background">@drawable/fondo_boton_neutro</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorTextoBotonNeutro</item>
