<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="28dp"
    android:background="?attr/colorFondoApp">

    <TextView
        android:id="@+id/lblNombreCancionAnadirCancion"
        style="@style/tituloRecyclerView"
        android:layout_marginStart="0dp"
        android:text="Cancion"
        app:layout_constraintEnd_toStartOf="@+id/circulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblSubtituloAnadirCancion"
        style="@style/subtituloRecyclerViewMarquee"
        android:text="Artista desconocido | Álbum desconocido"
        app:layout_constraintBottom_toTopOf="@+id/separador"
        app:layout_constraintEnd_toStartOf="@+id/circulo"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/circulo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/fondo_seleccionar_cancion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorSeparador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>